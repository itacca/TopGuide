<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.topguide.topguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".TopGuideApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.UnregisteredActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.TouristActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.WelcomeActivity" />
        <activity android:name=".activity.DetailedTourActivity"></activity>
    </application>

</manifest>