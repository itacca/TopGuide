<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.topguide.topguide.activity.RegisterActivity">

    <TextView
        android:id="@+id/text_view_guide"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        android:layout_alignTop="@id/text_view_guide"
        android:layout_marginTop="20dp"
        android:id="@+id/usernamebuttonguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/text_view_guide1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/usernamebuttonguide"
        android:layout_marginTop="60dp"
        android:text="Password:"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordbuttonguide"
        android:layout_alignTop="@+id/text_view_guide1"
        android:layout_marginTop="20dp"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/text_view_guide2"
        android:layout_alignTop="@+id/passwordbuttonguide"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        android:layout_alignTop="@id/text_view_guide2"
        android:layout_marginTop="20dp"
        android:id="@+id/namebuttonguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/text_view_guide3"
        android:layout_alignTop="@+id/namebuttonguide"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last name: "
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        android:layout_alignTop="@id/text_view_guide3"
        android:layout_marginTop="20dp"
        android:id="@+id/lastnamebuttonguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/text_view_guide4"
        android:layout_alignTop="@+id/lastnamebuttonguide"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail: "
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/emailbuttonguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_below="@+id/text_view_guide4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/switchprfilebuttonguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/emailbuttonguide"
        android:layout_marginTop="50dp"
        android:text="Switch to tourist profile"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:background="#F30" />

    <Button
        android:id="@+id/seetoursbuttonguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switchprfilebuttonguide"
        android:layout_marginTop="55dp"
        android:text="See your tours"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="#F30" />

</RelativeLayout>

