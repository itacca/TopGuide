<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.topguide.topguide.activity.RegisterActivity">

    <TextView
        android:id="@+id/text_view_register1"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <EditText
        android:layout_alignTop="@id/text_view_register1"
        android:layout_marginTop="30dp"
        android:id="@+id/username_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your username" />

    <TextView
        android:id="@+id/text_view_register2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/username_register"
        android:layout_marginTop="75dp"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_register"
        android:layout_alignTop="@+id/text_view_register2"
        android:layout_marginTop="30dp"
        android:hint="Enter your password"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_register3"
        android:layout_alignTop="@+id/password_register"
        android:layout_marginTop="75dp"
        android:text="Role"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/role_register"
        android:layout_alignTop="@+id/text_view_register3"
        android:layout_marginTop="30dp"
        android:hint="Enter your role"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/role_register"
        android:layout_marginTop="75dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>
