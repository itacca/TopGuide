<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.topguide.topguide.activity.RegisterActivity">

    <TextView
        android:id="@+id/text_view_register1"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <EditText
        android:layout_alignTop="@id/text_view_register1"
        android:layout_marginTop="20dp"
        android:id="@+id/username_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your username" />

    <TextView
        android:id="@+id/text_view_register2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/username_register"
        android:layout_marginTop="60dp"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_register"
        android:layout_alignTop="@+id/text_view_register2"
        android:layout_marginTop="20dp"
        android:hint="Enter your password"/>

    <TextView
        android:id="@+id/text_view_register3"
        android:layout_alignTop="@+id/password_register"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <EditText
        android:layout_alignTop="@id/text_view_register3"
        android:layout_marginTop="20dp"
        android:id="@+id/name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name" />

    <TextView
        android:id="@+id/text_view_register4"
        android:layout_alignTop="@+id/name_register"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last name: "
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <EditText
        android:layout_alignTop="@id/text_view_register4"
        android:layout_marginTop="20dp"
        android:id="@+id/lastname_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name" />

    <TextView
        android:id="@+id/text_view_register5"
        android:layout_alignTop="@+id/lastname_register"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail: "
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <EditText
        android:layout_alignTop="@id/text_view_register5"
        android:layout_marginTop="20dp"
        android:id="@+id/email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your e-mail address" />


    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/email_register"
        android:layout_marginTop="60dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>
